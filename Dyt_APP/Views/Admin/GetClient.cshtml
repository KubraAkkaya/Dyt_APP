@model Dyt_APP.Models.Classes.Client
@{
    ViewBag.Title = "GetClient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Düzenle</h2>
<br />
@using (Html.BeginForm("UpdateClient", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Surname)
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Age)
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Weight)
    @Html.TextBoxFor(x => x.Weight, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Height)
    @Html.TextBoxFor(x => x.Height, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Date)
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Phone)
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label for="gender">Cinsiyet Seçin:</label>
    <select name="gender" id="gender">
        <option value="0" @(Model.Gender == Dyt_APP.Models.Classes.Gender.Male ? "selected" : "")>Erkek</option>
        <option value="1" @(Model.Gender == Dyt_APP.Models.Classes.Gender.Female ? "selected" : "")>Kadın</option>
    </select>
    <br />
    <br />
    <label for="station">Durum Seçin:</label>
    <select name="station" id="station">
        <option value="0" @(Model.Station == Dyt_APP.Models.Classes.Station.Active ? "selected" : "")>Aktif</option>
        <option value="1" @(Model.Station == Dyt_APP.Models.Classes.Station.Pasive ? "selected" : "")>Pasif</option>
    </select>
    <br />
    <br />
    <button class="btn btn-primary">Güncelle</button>
}
