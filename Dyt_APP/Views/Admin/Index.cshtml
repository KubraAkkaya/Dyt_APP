@using Dyt_APP.Models.Classes
@model List<Client>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 style="border-left: 6px solid green;">&nbsp;MÜŞTERİLER</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>  ID </th>
        <th>  ADI </th>
        <th>  SOYADI </th>
        <th>  TELEFON </th>
        <th>  CİNSİYET </th>
        <th>  MESLEK </th>
        <th>  YAŞ </th>
        <th>  KİLO </th>
        <th>  BOY </th>
        <th>  TARİH </th>
        <th>  DURUM </th>
        <th>  ÖN B.FORM  </th>
        <th>  DETAY </th>
        <th>  BMI  </th>
        <th>  DÜZENLE </th>
        <th>  SİL </th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th> @x.ID </th>
            <th> @x.Name </th>
            <th> @x.Surname </th>
            <th> @x.Phone </th>
            <th> @x.Gender </th>
            <th> @x.Job </th>
            <th> @x.Age </th>
            <th> @x.Weight </th>
            <th> @x.Height </th>
            <th> @x.Date </th>
            <th> @x.Station </th>
            <th> <a href="/Admin/GetQuestion/@x.ID" class="btn" style="color: white; background-color: #3888c9 ">Form Gör</a></th>
            <th> <a href="/Admin/ClientDetail/@x.ID" class="btn btn-info">Detay</a></th>
            <th> <a href="/Admin/CalculateBMI/@x.ID" class="btn" style="color: white; background-color: #8fd173 ">Hesapla</a></th>
            <th> <a href="/Admin/GetClient/@x.ID" class="btn" style="color: white; background-color: #efb15b">Düzenle</a></th>
            <th> <a href="/Admin/DeleteClient/@x.ID" class="btn btn-danger">Sil</a></th>
        </tr>
    }
</table>

<a href="/Admin/NewClient" class="btn btn-info">MÜŞTERİ EKLE</a>
